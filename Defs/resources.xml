        <defName>IcecreteBlocksWood</defName>
        <label>icecrete (wood pulp) blocks</label>

        <graphicData>
            <color>(175, 155, 135)</color>
        </graphicData>
    </ThingDef>

    <ThingDef ParentName="IcecreteBlocksBase">
        <defName>IcecreteBlocksWood</defName>
